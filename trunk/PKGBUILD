# Maintainer: Giovanni Scafora <giovanni@archlinux.org>
# Contributor: Robert Emil Berge <robert@rebi.no>

pkgname=kino
pkgver=1.3.2
pkgrel=1
pkgdesc="A non-linear DV editor."
url="http://www.kinodv.org/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('libglade' 'libdv' 'libsamplerate' 'libxv' 'libiec61883' 'libavc1394' 'libsm')
source=(http://downloads.sourceforge.net/sourceforge/kino/$pkgname-$pkgver.tar.gz kino-gcc43.patch)
md5sums=('c534c666ed0312c75c877eb1580b985c' 'ee0c377d3d22d1df2ec5aa9c840be7c5')
options=("!libtool")

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -Np0 < $srcdir/kino-gcc43.patch
  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1
  make DESTDIR=$startdir/pkg prefix=/usr sysconfdir=/etc install
  chown root:root -R $startdir/pkg/usr/share/kino/help
}
