# $Id: PKGBUILD 2115 2008-05-25 19:25:26Z thayer $
# Maintainer: Thayer Williams <thayer@archlinux.org>
# Contributor: Thayer Williams <thayer@archlinux.org>

pkgname=archlinux-themes-kdm
pkgver=1.2
pkgrel=1
pkgdesc="Archlinux KDM greeter themes for KDE4"
arch=(i686 x86_64)
url="http://www.archlinux.org/"
license=('GPL')
source=(ftp://ftp.archlinux.org/other/artwork/${pkgname}-${pkgver}.tar.gz)
md5sums=('2fb205bb80fb7ba3fc2e2a6bce6e14d3')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  mkdir -p $startdir/pkg/usr/share/apps/kdm/themes
  mv archlinux-*/ $startdir/pkg/usr/share/apps/kdm/themes
}

