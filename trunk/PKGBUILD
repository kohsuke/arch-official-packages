# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gcalctool
pkgver=5.31.91
pkgrel=1
pkgdesc="GNOME Scientific calculator"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtk2>=2.22.0')
makedepends=('intltool' 'pkg-config' 'gnome-doc-utils>=0.20.1')
groups=('gnome-extra')
options=(!emptydirs)
url="http://www.gnome.org"
install=gcalctool.install
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/5.31/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('931acbec1e0792d44380b63ede5a3fe8a6102414cedb2e8151d990a0d1f1f2f8')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc --disable-schemas-compile \
      --localstatedir=/var --disable-scrollkeeper
  make
  make DESTDIR="${pkgdir}" install
}
