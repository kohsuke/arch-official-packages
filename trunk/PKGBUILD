# $Id$
# Contributor: Jason Chu <jason@archlinux.org>

pkgname=srcpac
pkgver=0.6
pkgrel=1
pkgdesc="The pacman from-source wrapper"
arch=(i686 x86_64)
url="http://projects.archlinux.org/srcpac.git/"
license=('GPL')
depends=('bash' 'pacman')
source=(ftp://ftp.archlinux.org/other/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('a45caa62010ffb9afcf24a50efc85220')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  install -d ${pkgdir}/etc/srcpac.d
  install -Dm 755 srcpac ${pkgdir}/usr/bin/srcpac || return 1
  install -Dm 644 srcpac.1 ${pkgdir}/usr/share/man/man1/srcpac.1 || return 1
}
