# $Id: PKGBUILD 179700 2013-03-09 11:48:07Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: Eugeni Dodonov <eugeni@dodonov.net>

pkgname=glamor-egl
pkgver=0.5
pkgrel=1
pkgdesc='OpenGL based 2D rendering acceleration library	'
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
#url='http://cgit.freedesktop.org/xorg/driver/glamor/'
license=('custom')
#depends=('glibc' 'mesa' 'libdrm' 'xorg-server-devel' 'libx11' 'xf86driproto' 'glproto')
#makedepends=('git')
source=(${url}/releases/individual/driver/${pkgname}-${pkgver}.tar.bz2)
conflicts=('glamir-git')
options=('!libtool')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make "DESTDIR=${pkgdir}" install
  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
