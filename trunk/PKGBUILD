# $Id$
# Maintainer: Thayer Williams <thayer@archlinux.org>

pkgname=archlinux-themes-gdm
pkgver=1.0
pkgrel=1
pkgdesc="Arch Linux greeter theme for the GNOME login manager"
arch=(i686 x86_64)
url="http://www.archlinux.org/"
license=('CCPL:by-nc-sa')
depends=('gdm')
source=(ftp://ftp.archlinux.org/other/artwork/${pkgname}-${pkgver}.tar.gz)
md5sums=('0630060c2e549bd13861b509314892bc')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  mkdir -p $startdir/pkg/usr/share/gdm/themes
  mv archlinux-simple-black/ $startdir/pkg/usr/share/gdm/themes
}

