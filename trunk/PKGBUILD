# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=totem-plparser
pkgver=2.26.0
pkgrel=1
url="http://www.hadess.net/totem.php3"
pkgdesc="Totem playlist parser library"
license=('LGPL')
arch=(i686 x86_64)
depends=('evolution-data-server>=2.26.0')
makedepends=('intltool' 'pkgconfig')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/totem-pl-parser/2.26/totem-pl-parser-${pkgver}.tar.bz2)
md5sums=('2514b1035a5c8a418580b59e0dcec7ca')

build() {
  cd "${srcdir}/totem-pl-parser-${pkgver}"
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
	      --localstatedir=/var \
	      --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
