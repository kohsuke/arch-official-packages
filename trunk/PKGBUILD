# Contributor: Kritoke <typeolinux@yahoo.com>

pkgname=libgnomeuimm
pkgver=2.24.0
pkgrel=1
pkgdesc="A C++ wrapper for libgnomeui."
arch=(i686 x86_64)
license=('GPL')
depends=('libgnomeui>=2.24.0' 'libgnomecanvasmm>=2.23.1' 'libgnomemm>=2.24.0' 'libglademm>=2.6.7' 'gconfmm>=2.24.0' 'gnome-vfsmm>=2.24.0')
makedepends=('pkgconfig')
options=('!libtool')
url="http://gtkmm.sourceforge.net/"
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.24/${pkgname}-${pkgver}.tar.bz2)
md5sums=('e4caf43ee829200bef9ad87415ae39a5')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
