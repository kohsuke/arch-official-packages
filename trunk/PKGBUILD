# $Id$
# Maintainer: Eric Belanger <eric@archlinux.org>
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=di
pkgver=4.17
pkgrel=1
pkgdesc="A disk information utility, displaying everything (and more) that your df command does"
arch=('i686' 'x86_64')
url="http://www.gentoo.com/di/"
license=('ZLIB')
depends=('glibc')
options=('!makeflags')
source=(http://www.gentoo.com/di/${pkgname}-${pkgver}.tar.gz)
md5sums=('be55b3a1693b318effa3db8d1c0243c1')
sha1sums=('10a780c2062feb1f4cda4ea99d17423f493293e1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make || return 1
  make prefix="${pkgdir}/usr" install || return 1
  ln -sf di "${pkgdir}/usr/bin/mi"
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
