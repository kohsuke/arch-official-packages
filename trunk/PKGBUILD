# $Id$
# Maintainer: Thayer Williams <thayer@archlinux.org>

pkgname=archlinux-wallpaper
pkgver=1.2
pkgrel=1
pkgdesc="A variety of wallpapers for Arch Linux"
arch=(i686 x86_64)
url="http://www.archlinux.org/"
license=('CCPL:by-nc-sa')
install=archlinux-wallpaper.install
source=(ftp://ftp.archlinux.org/other/artwork/${pkgname}-${pkgver}.tar.gz)
md5sums=('acbefae77e1936d09f15d7903da66bb7')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  mkdir -p ${startdir}/pkg/usr/share/archlinux/wallpaper

  install -m644 AUTHORS ${startdir}/pkg/usr/share/archlinux/wallpaper/
  install -m644 *.jpg ${startdir}/pkg/usr/share/archlinux/wallpaper/
  install -m644 *.png ${startdir}/pkg/usr/share/archlinux/wallpaper/
}

