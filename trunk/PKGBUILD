# $Id$
# Maintainer: Eric Belanger <eric@archlinux.org>

pkgname=freeciv
pkgver=2.2.4
pkgrel=1
pkgdesc="A multiuser clone of the famous Microprose game of Civilization"
arch=('i686' 'x86_64')
url="http://www.freeciv.org/"
license=('GPL')
depends=('gtk2' 'sdl_mixer' 'readline' 'bzip2')
options=('!libtool')
install=freeciv.install
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
md5sums=('29dec5214b565c19d925cb82c4373831')
sha1sums=('101b42b5f73516e9693c61ae826dd5fbe523edda')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --enable-client=gtk --enable-shared
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
