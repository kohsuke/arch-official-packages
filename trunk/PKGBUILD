# Contributor: Jason Chu <jason@archlinux.org>

pkgname=srcpac
pkgver=0.10.1
pkgrel=1
pkgdesc="The pacman from-source wrapper"
arch=('any')
url="http://projects.archlinux.org/srcpac.git/"
license=('GPL')
depends=('pacman' 'abs')
optdepends=('sudo')
source=("http://projects.archlinux.org/${pkgname}.git/snapshot/${pkgname}-${pkgver}.tar.gz")
md5sums=('cdd6d9104446f8959aab18ae22d0ceb8')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
