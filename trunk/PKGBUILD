# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=libbonoboui
pkgver=2.24.4
pkgrel=1
pkgdesc="User Interface library for Bonobo"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('libgnomecanvas>=2.30.2' 'libgnome>=2.32.0')
makedepends=('intltool' 'pkgconfig')
options=('!libtool' '!emptydirs')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.24/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('4b683a4a933392384267a0bf99771a99ef2ceacee22d67efe5648b894f8ba0c7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static
  make
  make DESTDIR="${pkgdir}" install
  rm -f "${pkgdir}/usr/share/applications/bonobo-browser.desktop"
}
