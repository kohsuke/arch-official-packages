pkgname=gnome-python-desktop
pkgver=2.24.0
pkgrel=2
pkgdesc="Gnome Python interfaces for libraries not part of the core platform"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('gnome-desktop>=2.24.0' 'gnome-python>=2.22.3')
options=('!libtool')
makedepends=('perlxml' 'pkgconfig' 'gnome-media>=2.24.0' 'gnome-panel>=2.24.0' 'gtksourceview>=1.8.5' 'libgnomeprintui>=2.18.2' 'libgtop>=2.24.0' 'totem-plparser>=2.24.0' 'nautilus-cd-burner>=2.24.0')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.24/${pkgname}-${pkgver}.tar.bz2)
md5sums=('a6689e581fc2e67937593033be7007f9')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf configure --prefix=/usr || return 1
  ./waf build ${MAKEFLAGS} || return 1
  ./waf install --destdir="${pkgdir}" || return 1
}
