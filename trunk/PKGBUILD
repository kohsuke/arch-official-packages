# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=pygtksourceview2
pkgver=2.4.0
pkgrel=1
pkgdesc="Python bindings for gtksourceview2"
arch=(i686 x86_64)
license=('GPL')
depends=('gtksourceview2>=2.4.0' 'pygobject>=2.15.4')
makedepends=('perlxml' 'pkgconfig')
options=('!libtool')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/gnome/sources/pygtksourceview/2.4/pygtksourceview-${pkgver}.tar.bz2)
md5sums=('436e2ec467035a8cd174b794932e4cdc')

build() {
  cd "${srcdir}/pygtksourceview-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
	--localstatedir=/var --disable-static --disable-docs || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
