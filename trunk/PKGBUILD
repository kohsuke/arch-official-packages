# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=totem-plparser
pkgver=2.30.3
pkgrel=1
url="http://www.hadess.net/totem.php3"
pkgdesc="Totem playlist parser library"
license=('LGPL')
arch=(i686 x86_64)
depends=('gmime>=2.4.19' 'libsoup-gnome>=2.30.2')
makedepends=('intltool' 'pkgconfig' 'gobject-introspection')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/totem-pl-parser/2.30/totem-pl-parser-${pkgver}.tar.bz2)
sha256sums=('bc8d724fed7db89cb8b09e6a45badbb9752bd5eb10288bf4a19cce35d3cd9bba')

build() {
  cd "${srcdir}/totem-pl-parser-${pkgver}"
  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --disable-static
  make
  make DESTDIR="${pkgdir}" install
}
