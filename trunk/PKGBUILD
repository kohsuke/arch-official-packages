# $Id$
# Maintainer: Eric Belanger <eric@archlinux.org>

pkgname=mutagen
pkgver=1.15
pkgrel=1
pkgdesc="An audio metadata tag reader and writer implemented in pure python"
arch=('i686' 'x86_64')
url="http://code.google.com/p/quodlibet/wiki/Development/Mutagen"
license=('GPL')
depends=('python>=2.6')
source=(http://quodlibet.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('c346e1290711a38c123727c31f3602f8')
sha1sums=('831e618f6f0778a5cc285332d3d1e363dd31d652')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python setup.py install --root=${pkgdir} || return 1
  install -d ${pkgdir}/usr/bin || return 1
  install -m755 tools/* ${pkgdir}/usr/bin || return 1
}
