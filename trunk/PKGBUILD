# $Id$
# Maintainer:  Ionut Biru <ibiru@archlinux.org>
# Contributor: Daniel Balieiro <daniel@balieiro.com>
pkgname=telepathy-butterfly
pkgver=0.5.10
pkgrel=1
pkgdesc="A MSN connection manager for Telepathy"
arch=('i686' 'x86_64')
url="http://telepathy.freedesktop.org"
groups=('telepathy')
license=('GPL')
depends=('papyon>=0.4.7' 'python-telepathy>=0.15.17')
source=(http://telepathy.freedesktop.org/releases/telepathy-butterfly/telepathy-butterfly-$pkgver.tar.gz)
sha256sums=('fcdad6f69ec6f7173bd80a54b31ff52c034fd74a10f02e47c1d128d60c306281')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --libexecdir=/usr/lib/telepathy
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
