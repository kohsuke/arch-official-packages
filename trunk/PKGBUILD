pkgname=pycairo
pkgver=1.6.4
pkgrel=2
pkgdesc="Python bindings for the cairo graphics library"
arch=(i686 x86_64)
license=('LGPL' 'MPL')
depends=('python' 'cairo>=1.8.0')
options=('!libtool')
source=(http://pypi.python.org/packages/source/p/pycairo/${pkgname}-${pkgver}.tar.gz)
url="http://www.cairographics.org/"

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}

md5sums=('2c3aa21e6e610321498f9f81f7b625df')
