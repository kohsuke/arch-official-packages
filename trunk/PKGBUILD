# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gstreamer0.10-python
pkgver=0.10.12
pkgrel=1
pkgdesc="Python bindings for GStreamer 0.10"
arch=(i686 x86_64)
license=('LGPL')
url="http://gstreamer.freedesktop.org/"
depends=('pygobject>=2.14.2' 'gstreamer0.10-base>=0.10.20')
makedepends=('pkgconfig')
options=('!libtool')
source=(http://gstreamer.freedesktop.org/src/gst-python/gst-python-${pkgver}.tar.bz2)
md5sums=('e5d39eed5062ab1521abc61a6863f7b3')

build() {
  cd ${startdir}/src/gst-python-${pkgver}
  ./configure --prefix=/usr --disable-docs || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}
