pkgname=lxsplit
pkgver=0.2.2
pkgrel=1
pkgdesc="Command-line file splitter/joiner compatible with any HJSplit version"
url="http://lxsplit.sourceforge.net/"
depends=('glibc')
arch=('i686' 'x86_64')
license=('GPL')
#source=(http://www.freebyte.com/download/$pkgname.tar.gz)
source=("http://puzzle.dl.sourceforge.net/sourceforge/lxsplit/lxsplit-$pkgver.tar.gz")

build() {
  cd $startdir/src/$pkgname-$pkgver
  /bin/mkdir -p $startdir/pkg/usr/bin
  /usr/bin/make || return 1
  /usr/bin/make INSTALL_PATH=$startdir/pkg/usr/bin install
}
md5sums=('f8de6f2d70b31eb473fbe2831844da77')
