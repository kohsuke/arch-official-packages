#! /bin/sh

storepass='changeit'
. /etc/default/cacerts

echo ""
if [ "$cacerts_updates" != yes ] || [ "$CACERT_UPDATES" = disabled ]; then
	echo "updates of cacerts keystore disabled."
	exit 0
fi

JAR=/usr/share/ca-certificates-java/ca-certificates-java.jar

java -jar $JAR -storepass "$storepass"
echo "done."
