	make DESTDIR="${pkgdir}" install
	cd "${srcdir}"/build/doc/kioslave/news
	make DESTDIR="${pkgdir}" install
	cd "${srcdir}"/build/kontact/plugins/knode
	make DESTDIR="${pkgdir}" install
}

