# $Id: $
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kwebkitpart
pkgver=svn1143604
pkgrel=1
pkgdesc="A web browser component for KDE"
url="http://techbase.kde.org/Projects/WebKit"
arch=('i686' 'x86_64')
license=('GPL')
depends=('kdebase-runtime')
makedepends=('cmake' 'automoc4')
install=${pkgname}.install
#svn co -q svn://anonsvn.kde.org/home/kde/trunk/extragear/base/kwebkitpart ${pkgname}-${pkgver}
source=("ftp://ftp.archlinux.org/other/kde/${pkgname}-${pkgver}.tar.bz2")
md5sums=('84e353f4210e04d3949871834705f342')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
