pkgname=gnome-python-desktop
pkgver=2.27.2
pkgrel=1
pkgdesc="Gnome Python interfaces for libraries not part of the core platform"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('gnome-desktop>=2.27.5' 'gnome-python>=2.27.1')
options=('!libtool')
makedepends=('intltool' 'pkgconfig' 'gnome-media>=2.27.90' 'gnome-panel>=2.27.4' 'gtksourceview>=1.8.5' 'libgnomeprintui>=2.18.4' 'libgtop>=2.27.3' 'totem-plparser>=2.27.2' 'nautilus-cd-burner>=2.24.0' 'evince>=2.27.90' 'bug-buddy>=2.27.1' 'brasero>=2.27.90')
optdepends=('gnome-media' 'gnome-panel' 'gtksourceview' 'libgnomeprintui' 'libgtop' 'totem-plparser' 'nautilus-cd-burner' 'evince' 'bug-buddy' 'brasero')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.27/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('0d6a3ff4b5e41c169f6794e64f1490830244b1f1e4f552824dd3b75e09a1a6af')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf configure --prefix=/usr || return 1
  ./waf build ${MAKEFLAGS} || return 1
  ./waf install --destdir="${pkgdir}" || return 1
}
