# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=totem-plparser
pkgver=2.27.92
pkgrel=1
url="http://www.hadess.net/totem.php3"
pkgdesc="Totem playlist parser library"
license=('LGPL')
arch=(i686 x86_64)
depends=('gmime>=2.4.9' 'libxml2>=2.7.3' 'gtk2>=2.17.11')
makedepends=('intltool' 'pkgconfig')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/totem-pl-parser/2.27/totem-pl-parser-${pkgver}.tar.bz2)
sha256sums=('1ca669155cc2c41e9e9d0e354d254c0c7fca2fb5e6d583adb3fa479bed0748b3')

build() {
  cd "${srcdir}/totem-pl-parser-${pkgver}"
  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
