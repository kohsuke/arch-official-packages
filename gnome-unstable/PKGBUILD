# $Id: $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=eggdbus
pkgver=0.4
pkgrel=1
pkgdesc="Experimental D-Bus bindings for GObject"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.freedesktop.org/wiki/Software/Policykit"
depends=('glib2>=2.21.4' 'dbus-glib>=0.80')
makedepends=('gtk-doc')
options=('!libtool')
source=(http://people.freedesktop.org/~david/${pkgname}-${pkgver}.tar.gz)
md5sums=('db135ef3072e102c319838e34f7eaa27')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static --enable-gtk-doc || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
