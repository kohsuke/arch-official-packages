# $Id$
# Maintainer: Jan de Groot <jan@archlinux.org>

pkgname=at-spi
pkgver=1.27.92
pkgrel=1
pkgdesc="Assistive Technology Service Provider Interface"
arch=(i686 x86_64)
license=('GPL')
depends=('libbonobo>=2.24.1' 'libxtst' 'gtk2>=2.17.11')
makedepends=('pkgconfig' 'python' 'intltool')
options=('!libtool')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.27/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('abf06ce2cc67b8f823f2725ffad212a9b06bf07a635926cd956b872af4357436')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static \
      --libexecdir=/usr/lib/at-spi || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
