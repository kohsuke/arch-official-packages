	 'libreoffice-uz'    'libreoffice-ve'    'libreoffice-vi'    'libreoffice-xh'    'libreoffice-zh-CN' 'libreoffice-zh-TW'
	 'libreoffice-zu')
pkgver=3.3.2
pkgrel=2
pkgdesc="LibreOffice language/localisation files"
arch=('any')
url="http://www.documentfoundation.org"
license=('LGPL')
depends=('libreoffice') #>=${pkgver}")
makedepends=('rpmextract')

#http://download.documentfoundation.org/mirrors/all.html
#_url="http://download.documentfoundation.org/libreoffice/testing" #  http://www.libreoffice.org/download/pre-releases/
_url="http://download.documentfoundation.org/libreoffice/stable"
#_oover="3.3.1-rc2"
_oover="3.3.2"
#_oodlver="3.3.1rc2"
_oodlver="3.3.2"
_oomainver="3.3"
#_helpver=3.3.0-5
_helpver=3.3.2rc2

