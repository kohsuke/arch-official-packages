#	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_ti.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_tn.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_tr.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_ts.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_ug.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_uk.tar.gz
#	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_ur.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_uz.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_ve.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_vi.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_xh.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_zh-CN.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_zh-TW.tar.gz
	${_url}/${_oover}/rpm/x86/LibO_${_oodlver}_Linux_x86_{langpack,helppack}-rpm_zu.tar.gz)

build() {
  for i in ${pkgname[@]}
    do _pkglang=${i#*-}
     echo ${_pkglang} " unpacking..."
     #cd ${srcdir}/LibO_${_oover/-/}_Linux_x86_langpack-rpm_${_pkglang}/RPMS
     cd ${srcdir}/LibO_${_helpver}_Linux_x86_langpack-rpm_${_pkglang}/RPMS
     # remove dictionaries if shipped - we ship them now in separate packages
     rm libreoffice3-dict-*.rpm || /bin/true
	for j in *.rpm
	 do rpmextract.sh $j
	done
     # the helppack rpm goes also into the langpack dir - so far we don't want to split the helppacks separate
#     rpmextract.sh ${srcdir}/LibO_${_oover/-/}_Linux_x86_helppack-rpm_${_pkglang}/RPMS/libobasis3.3-${_pkglang}-help-${_helpver}.i586.rpm
     #rpmextract.sh ${srcdir}/LibO_${_oover/-/}_Linux_x86_helppack-rpm_${_pkglang}/RPMS/*.rpm
     rpmextract.sh ${srcdir}/LibO_${_helpver/-/}_Linux_x86_helppack-rpm_${_pkglang}/RPMS/*.rpm
  done
}

package_libreoffice-af() {
  pkgdesc="Afrikaans language pack for LibreOffice"
  cd ${srcdir}/LibO_${_helpver/-/}_Linux_x86_langpack-rpm_af/RPMS

  # install libreoffice language files
  mkdir -p ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/basis${_oomainver}/* ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/{program,readmes} ${pkgdir}/usr/lib/libreoffice
  chown root:root -R ${pkgdir}/usr/lib/libreoffice
}

package_libreoffice-ar() {
  pkgdesc="Arabic language pack for LibreOffice"
  cd ${srcdir}/LibO_${_helpver/-/}_Linux_x86_langpack-rpm_ar/RPMS

  # install libreoffice language files
  mkdir -p ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/basis${_oomainver}/* ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/{program,readmes} ${pkgdir}/usr/lib/libreoffice
  chown root:root -R ${pkgdir}/usr/lib/libreoffice
}

package_libreoffice-as() {
  pkgdesc="Assamese (India) language pack for LibreOffice"
  cd ${srcdir}/LibO_${_helpver/-/}_Linux_x86_langpack-rpm_as/RPMS

  # install libreoffice language files
  mkdir -p ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/basis${_oomainver}/* ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/{program,readmes} ${pkgdir}/usr/lib/libreoffice
  chown root:root -R ${pkgdir}/usr/lib/libreoffice
}

package_libreoffice-ast() {
  pkgdesc="Asturianu language pack for LibreOffice"
  cd ${srcdir}/LibO_${_helpver/-/}_Linux_x86_langpack-rpm_ast/RPMS

  # install libreoffice language files
  mkdir -p ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/basis${_oomainver}/* ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/{program,readmes} ${pkgdir}/usr/lib/libreoffice
  chown root:root -R ${pkgdir}/usr/lib/libreoffice
}


package_libreoffice-be-BY() {
  pkgdesc="Belarusian language pack for LibreOffice"
  cd ${srcdir}/LibO_${_helpver/-/}_Linux_x86_langpack-rpm_be-BY/RPMS

  # install libreoffice language files
  mkdir -p ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/basis${_oomainver}/* ${pkgdir}/usr/lib/libreoffice/basis-link
  cp -R opt/libreoffice/{program,readmes} ${pkgdir}/usr/lib/libreoffice
  chown root:root -R ${pkgdir}/usr/lib/libreoffice
}

