# $Id: PKGBUILD 2115 2008-05-25 19:25:26Z thayer $
# Maintainer: Thayer Williams <thayer@archlinux.org>

pkgname=archlinux-themes-kdm
pkgver=1.0
pkgrel=1
pkgdesc="Arch Linux greeter theme for the KDE login manager"
arch=(i686 x86_64)
url="http://www.archlinux.org/"
license=('GPL')
source=(ftp://ftp.archlinux.org/other/artwork/${pkgname}-${pkgver}.tar.gz)
md5sums=('f550c9a01c39761133d5e3ceec836fb9')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  mkdir -p $startdir/pkg/opt/kde/share/apps/kdm/themes
  mv archlinux-*/ $startdir/pkg/opt/kde/share/apps/kdm/themes
}

