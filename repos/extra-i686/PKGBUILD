# $Id$
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kdepim
pkgver=4.1.3
pkgrel=2
pkgdesc="KDE Personal Information Management suite"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
groups=('kde')
depends=('kdepimlibs' 'gnokii' 'libxss' 'kdebase-runtime')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'boost')
options=('docs')
install='kdepim.install'
source=("http://download.kde.org/stable/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2"
        'mail-duplication.patch')
md5sums=('655ff3c21c36a3378723bc2afb8cb434'
         '1ebbc06914f79d00f6446a3eb0b17d18')

build() {
	cd $srcdir/${pkgname}-${pkgver}
	patch -p4 -i $srcdir/mail-duplication.patch || return 1
	cd ../
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
