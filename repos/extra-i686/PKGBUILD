# $Id$
# Maintainer: tobias <tobias funnychar archlinux.org>

pkgname=libxfcegui4
pkgver=4.6.0
pkgrel=1
pkgdesc="Various gtk widgets for Xfce"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4')
depends=('startup-notification' "xfconf>=$pkgver" "libglade>=2.6.3" 'hicolor-icon-theme')
makedepends=('pkgconfig' 'intltool')
options=('!libtool')
install=${pkgname}.install
source=(http://www.xfce.org/archive/xfce-${pkgver}/src/${pkgname}-${pkgver}.tar.bz2)
md5sums=('8627ae4fad26289f55f0afbebe238bf5')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib \
    --localstatedir=/var --disable-static # --enable-xinerama
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
