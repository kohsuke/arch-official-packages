#$Id$
#Maintainer: Thayer Williams <thayer@archlinux.org>

pkgname=pm-utils
pkgver=1.2.3
pkgrel=1
pkgdesc="Utilities and scripts for suspend and hibernate power management"
url="http://pm-utils.freedesktop.org"
license=('GPL')
arch=('i686' 'x86_64')
depends=('glibc' 'vbetool' 'procps')
makedepends=('xmlto')
source=(http://pm-utils.freedesktop.org/releases/${pkgname}-${pkgver}.tar.gz
	11netcfg)
md5sums=('2a9a9e3de8bcda43c88a9e346866fd55' '9839687c8787d99fd4ff36aa3238c27b')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1

  # install additional hooks
  install -m755 $srcdir/11netcfg $pkgdir/usr/lib/pm-utils/sleep.d/11netcfg || return 1
}

