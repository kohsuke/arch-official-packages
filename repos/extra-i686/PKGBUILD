# $Id$
# Maintainer: Daniel Isenmann <daniel@archlinux.org>
# Contributor: dorphell <dorphell@archlinux.org>

pkgname=opera
pkgver=9.52
pkgrel=1
pkgdesc="The Opera web browser"
url="http://www.opera.com/"
depends=('qt3')
license=('custom:opera')
arch=('i686' 'x86_64')
source=(http://ftp.opera.com/pub/opera/linux/${pkgver/./}/final/en/i386/shared/opera-${pkgver}-2091.gcc4-shared-qt3.i386.tar.bz2 opera.desktop opera_logo48.png)
md5sums=('f070d798975f8cea0ccfdb6b25e53c47'
	'f99bef1a9200abe5a5cda78665cddc84'
        'a270c65b8d4f8e2e76439f417ea44265')

[ "$CARCH" = "x86_64" ] && source=(http://ftp.opera.com/pub/opera/linux/${pkgver/./}/final/en/x86_64/opera-${pkgver}-2091.gcc4-shared-qt3.x86_64.tar.bz2 opera.desktop opera_logo48.png)
[ "$CARCH" = "x86_64" ] && md5sums=('37c2c629cf851e3df867f2befc8ed542' 
	'f99bef1a9200abe5a5cda78665cddc84'
	'a270c65b8d4f8e2e76439f417ea44265')

build() {
if [ "$CARCH" = "x86_64" ]; then
       cd ${startdir}/src/opera-${pkgver}-2091.gcc4-shared-qt3.x86_64
       sed 's|/usr/X11R6/lib/mozilla/plugins=1|/usr/lib/mozilla/plugins=1|' -i usr/share/opera/ini/pluginpath.ini || return 1
  else cd ${startdir}/src/opera-${pkgver}-2091.gcc4-shared-qt3.i386
       sed 's|/usr/X11R6/lib/mozilla/plugins=1|/usr/lib/mozilla/plugins=1|' -i usr/share/opera/ini/pluginpath.ini || return 1
fi
   ./install.sh DESTDIR=${startdir}/pkg
   install -D -m 644 ${startdir}/src/opera.desktop ${startdir}/pkg/usr/share/applications/opera.desktop
   install -D -m 644 LICENSE ${startdir}/pkg/usr/share/licenses/opera/license.txt
   install -D -m 644 ${startdir}/src/opera_logo48.png ${startdir}/pkg/usr/share/opera/images/opera_48x48.png
}
