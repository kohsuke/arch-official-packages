# $Id$
# Maintainer: Aaron Griffin <aaron@archlinux.org>
# Contributor: Dieter Plaetinck <dieter@plaetinck.be>

pkgname=aif
pkgver=2009.01.24
pkgrel=1
pkgdesc="The ArchLinux Installation Framework"
arch=('i686' 'x86_64')
url="http://projects.archlinux.org/?p=aif.git;a=summary"
license=('GPL3')
depends=('bash' 'pacman')
source=(http://ftp.archlinux.org/other/aif/aif-$pkgver.tar.gz)

build() {

  cd $srcdir/aif-$pkgver/
  
  install -D -m755 src/aif.sh  $pkgdir/arch/aif

  mkdir -p $pkgdir/home/arch/aif/docs
  cp -r HOWTO README $pkgdir/home/arch/aif/docs
  cp -r src/{core,user,runtime}     $pkgdir/home/arch/aif/
  find $pkgdir/home/arch/aif -type f -exec chmod 644 {} \;
}

# vim:set ts=2 sw=2 et:

