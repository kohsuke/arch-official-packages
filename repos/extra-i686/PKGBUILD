# Contributor: Giovanni Scafora <giovanni@archlinux.org>
# Contributor: Adam Griffiths <adam_griffithsAATTdart.net.au>

pkgname=ode
pkgver=0.10.0
pkgrel=3
pkgdesc="An open source, high performance library for simulating rigid body dynamics"
arch=('i686' 'x86_64')
url="http://www.ode.org"
license=('LGPL' 'BSD')
depends=('gcc-libs')
source=(http://downloads.sourceforge.net/sourceforge/opende/${pkgname}-${pkgver}.tar.bz2)
md5sums=('e84ff88b34f3a9b96ee479f175fb0b11')

build() {
  cd $startdir/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr --enable-shared
  make || return 1
  make DESTDIR=$startdir/pkg install

  install -Dm0644 $startdir/src/${pkgname}-${pkgver}/ou/LICENSE-BSD.TXT \
 		  $startdir/pkg/usr/share/licenses/${pkgname}/LICENSE-BSD.TXT
}
