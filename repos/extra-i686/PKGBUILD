# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=totem-plparser
pkgver=2.24.2
pkgrel=1
url="http://www.hadess.net/totem.php3"
pkgdesc="Totem playlist parser library"
license=('LGPL')
arch=(i686 x86_64)
depends=('evolution-data-server>=2.24.1')
makedepends=('perlxml' 'intltool')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/totem-pl-parser/2.24/totem-pl-parser-${pkgver}.tar.bz2)
md5sums=('02bd41318deea19f64db923774d2b919')

build() {
  cd "${srcdir}/totem-pl-parser-${pkgver}"
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
	      --localstatedir=/var \
	      --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
