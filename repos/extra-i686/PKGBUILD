# Contributor: Sarah Hay <sarah@archlinux.org>

pkgname=gnome-python
pkgver=2.26.0
pkgrel=1
pkgdesc="gnome-python is a set of interfaces to gnome-libs."
arch=(i686 x86_64)
license=('LGPL')
depends=('pygtk>=2.14.1' 'pyorbit>=2.24.0' 'libgnomeui>=2.24.1')
makedepends=('pkgconfig')
options=('!libtool')
url="http://www.pygtk.org/"
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-python/2.26/${pkgname}-${pkgver}.tar.bz2)
md5sums=('452b8489eed892d09c506c17efd597f1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf configure --prefix=/usr || return 1
  ./waf build ${MAKEFLAGS} || return 1
  ./waf install --destdir="${pkgdir}" || return 1
}
