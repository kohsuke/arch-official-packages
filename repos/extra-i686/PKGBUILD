pkgname=python-mpd
pkgver=0.2.0
pkgrel=1
pkgdesc="A python client library for MPD"
license="GPL3"
arch=('i686' 'x86_64')
url="http://www.musicpd.org/~jat/python-mpd/"
depends=('python')
source=(http://pypi.python.org/packages/source/p/python-mpd/$pkgname-$pkgver.tar.gz)
md5sums=('983507ee308b5895608156da10c3cfcb')

build() {
	cd $startdir/src/$pkgname-$pkgver/
	python setup.py install --root=$startdir/pkg || return 1
}

