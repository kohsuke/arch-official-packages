# $Id$
# Maintainer: Jan de Groot <jan@archlinux.org>

pkgname=at-spi
pkgver=1.23.6
pkgrel=1
pkgdesc="Assistive Technology Service Provider Interface"
arch=(i686 x86_64)
license=('GPL')
depends=('libbonobo>=2.23.1' 'libxevie' 'libxtst' 'gtk2>=2.13.7')
makedepends=('perlxml' 'pkgconfig' 'python>=2.5')
options=('!libtool')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.23/${pkgname}-${pkgver}.tar.bz2)
md5sums=('0a53d08b26a8e52ddcdfea8243564ba5')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static \
	      --libexecdir=/usr/lib/at-spi || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}
