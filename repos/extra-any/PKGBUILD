pkgname=python-logilab-common
pkgver=0.55.0
pkgrel=1
pkgdesc="Useful miscellaneous modules used by Logilab projects"
arch=('any')
url="http://www.logilab.org/project/logilab-common"
license=('LGPL')
depends=('python-egenix-mx-base')
makedepends=('python2-distribute')
source=(http://ftp.logilab.org/pub/common/logilab-common-${pkgver}.tar.gz)
sha1sums=('75babf74b28dab84a8434f7f05919584788df848')

build() {
  cd "${srcdir}/logilab-common-${pkgver}"

  python2 setup.py build
}

package() {
  cd "${srcdir}/logilab-common-${pkgver}"

  python2 setup.py install -O1 --skip-build --prefix=/usr --root="${pkgdir}"
}
