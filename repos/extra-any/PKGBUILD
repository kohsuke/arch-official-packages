# $Id$
# Maintainer: Gaetan Bisson <bisson@archlinux.org>

pkgname=ttf-tlwg
pkgver=0.5.1
pkgrel=1
pkgdesc='Collection of scalable Thai fonts'
url='http://linux.thai.net/projects/fonts-tlwg'
arch=('any')
license=('GPL' 'custom')
depends=('xorg-fonts-encodings' 'xorg-fonts-alias' 'xorg-font-utils' 'fontconfig')
source=("ftp://linux.thai.net/pub/thailinux/software/thai-ttf/${pkgname}-${pkgver}.tar.xz"
        'LICENSE')
sha1sums=('0848d2c7fa18c1f01daa2aef9c964471952b159b'
          '39a8c3eb83856f9dff63a3493f891a702d3fa802')

install=install

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	install -d "${pkgdir}/usr/share/fonts/TTF"
	install -d "${pkgdir}/etc/fonts/conf.avail"
	install -d "${pkgdir}/usr/share/licenses/${pkgname}"

	install -m644 *.ttf "${pkgdir}/usr/share/fonts/TTF"
	install -m644 etc/fonts/conf.avail/* "${pkgdir}/etc/fonts/conf.avail"
	install -m644 ../LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
