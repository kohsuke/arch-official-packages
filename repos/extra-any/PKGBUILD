pkgname=smplayer-themes
pkgver=20120131
pkgrel=1
pkgdesc="Themes for smplayer"
arch=('any')
url="http://smplayer.sourceforge.net/"
license=('GPL')
depends=('smplayer')
source=("http://downloads.sourceforge.net/smplayer/$pkgname-$pkgver.tar.gz")
md5sums=('85ba4cbe13645693551b92cd1bb012a5')

build() {
     cd "$srcdir/$pkgname-$pkgver"
     make PREFIX="$pkgdir/usr" CONF_PREFIX=
}

package() {
     cd "$srcdir/$pkgname-$pkgver"
     make PREFIX="$pkgdir/usr" install
}
