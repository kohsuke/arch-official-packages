# $Id: $
# Maitnainer: Jan de Groot <jgc@archlinux.org>

pkgname=java-access-bridge
pkgver=1.24.0
pkgrel=1
pkgdesc="Java bindings for the GNOME accessibility framework"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.gnome.org"
depends=('java-runtime')
makedepends=('perlxml' 'pkgconfig' 'openjdk6' 'xorg-utils')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.24/${pkgname}-${pkgver}.tar.bz2)
md5sums=('1b50f8afd808d13116fbbcfa28372052')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
