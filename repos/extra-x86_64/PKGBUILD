# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gstreamer0.10-python
pkgver=0.10.13
pkgrel=2
pkgdesc="Python bindings for GStreamer 0.10"
arch=(i686 x86_64)
license=('LGPL')
url="http://gstreamer.freedesktop.org/"
depends=('pygobject>=2.15.4' 'gstreamer0.10-base>=0.10.21')
makedepends=('pkgconfig')
options=('!libtool')
source=(http://gstreamer.freedesktop.org/src/gst-python/gst-python-${pkgver}.tar.bz2)
md5sums=('579f2026b128cbaec88b4e5209511070')

build() {
  cd ${startdir}/src/gst-python-${pkgver}
  ./configure --prefix=/usr --disable-docs || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}
