# Maintainer: Aaron Griffin <aaron@archlinux.org>
# Contributor: lucke <lucke at o2 dot pl>

pkgname=weechat
pkgver=0.2.6
pkgrel=3
pkgdesc="Fast, light & extensible IRC client (curses UI)"
arch=(i686 x86_64)
license=('GPL')
url="http://weechat.flashtux.org/index.php?lang=en"
depends=('perl>=5.10' 'python>=2.5' 'ruby' 'gnutls>=2.4.1' 'lua' 'aspell')
source=(http://weechat.flashtux.org/download/$pkgname-$pkgver.tar.bz2)
options=(!libtool)
md5sums=('ccdecf663b0050a23049acb4b9a76193')
sha1sums=('d31ca0b563941813a337aa91f38a8e80877b0d8b')

build()
{
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --with-debug=0 LDFLAGS="-lm -ldl" || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}
