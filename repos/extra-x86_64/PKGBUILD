# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=lbreakout2
pkgver=2.6beta_7
pkgrel=3
pkgdesc="A breakout game with nice effects, graphics, and sounds"
arch=('i686' 'x86_64')
url="http://lgames.sourceforge.net"
license=('GPL')
depends=('sdl_mixer' 'libpng')
source=(http://downloads.sourceforge.net/lgames/$pkgname-${pkgver/_/-}.tar.gz)
md5sums=('bccede972d2f73612c47ca6a5aa9770e')

build() {
  cd $srcdir/$pkgname-${pkgver/_/-}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir/ install
  install -D ../../lbreakout2.png $pkgdir/usr/share/pixmaps/lbreakout2.png
  install -D ../../lbreakout2.desktop $pkgdir/usr/share/applications/lbreakout2.desktop
}
