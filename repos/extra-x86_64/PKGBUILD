# $Id$
# Maintainer: Pierre Schmitz <pierre@archlinux.de>
pkgname=psi
pkgver=0.12
_rcver=RC4
pkgrel=1
pkgdesc="Psi - Jabber client"
license=('GPL')
arch=('i686' 'x86_64')
depends=('qca>=2.0' 'aspell' 'libxss')
url="http://psi-im.org/"
source=("http://downloads.sourceforge.net/psi/psi-${pkgver}-${_rcver}.tar.bz2")
md5sums=('7d12728b30df86c72297d8a9fc8afea8')

build() {
	cd $startdir/src/psi-${pkgver}-${_rcver}
	./configure --prefix=/usr --disable-bundled-qca || return 1
	make || return 1
	make INSTALL_ROOT=$startdir/pkg install
}
