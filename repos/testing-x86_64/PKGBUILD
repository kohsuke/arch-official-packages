# Contributor: Jason Chu <jason@archlinux.org>

pkgname=dvgrab
pkgver=3.4
pkgrel=1
pkgdesc="Saves audio and video data from an IEEE (FireWire) digital source"
arch=('i686' 'x86_64')
url="http://www.kinodv.org"
license=('GPL')
depends=('libdv>=1.0.0' 'libavc1394>=0.5.3-3' 'libjpeg' 'libiec61883>=1.2.0' 'gcc-libs')
makedepends=('pkgconfig')
source=(http://downloads.sourceforge.net/sourceforge/kino/${pkgname}-${pkgver}.tar.gz)
md5sums=('093b74cb9f9bf321e48ffbbe5ba8cba6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
