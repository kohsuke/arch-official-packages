# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-speech
pkgver=0.4.21
pkgrel=1
pkgdesc="Gnome Text-to-Speech"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.gnome.org"
depends=('libbonobo>=2.24.0')
makedepends=('perlxml' 'pkgconfig' 'espeak' 'java-access-bridge' 'openjdk6')
optdepends=('espeak: Text to speech engine'
	    'festival: Text to speech engine'
	    'java-access-bridge: Speech support for java')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/0.4/${pkgname}-${pkgver}.tar.bz2)
md5sums=('c6cb75005fcf974d75206f5d1567981f')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
