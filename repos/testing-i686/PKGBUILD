# Maintainer: Geoffroy Carrier <geoffroy@archlinux.org>

pkgname=obexd
pkgver=0.8
pkgrel=1
pkgdesc="D-Bus service providing high-level OBEX client and server side functionality"
url="http://www.bluez.org/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('dbus-glib>=0.76' 'bluez>=4.18' 'openobex>=1.4')
source=("http://www.kernel.org/pub/linux/bluetooth/$pkgname-$pkgver.tar.gz")

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --libexecdir=/usr/lib/obex \
              --mandir=/usr/share/man --sysconfdir=/etc || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}

md5sums=('1c6d525438d6590c63cadc27594b8485')
